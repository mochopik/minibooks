<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red">
                        <i class="fa fa-pencil-square-o"></i> 
                    </a>
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p class="story-text">{{truncate (stripTags body) 150}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="user images">
                        {{user.firstName}} {{user.lastName}}
                    </div>
                </div>
                <div class="card-action center-align">
                    <a class="btn teal" href="/stories/show/{{id}}"><i class="fa fa-chevron-down"></i> Read More</a>
                </div>
            </div>
        </div> 
    {{else}}
        <p>No Stories found</p>
    {{/each}}
</div>