<h1>Edit Stories</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status" id="">
                    {{#select story.status}}
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                        <option value="unpublish">unpublish</option>
                    {{/select}}
                </select>
                <label for="title">Status</label>
            </div>
        </div>
        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.allowComments}} checked="checked" {{/if}}>
                <label for="filled-in-box">Allow Comment</label>
            </p>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Tell your stories</h5>
                <textarea name="body" id="" cols="30" rows="10">{{story.body}}</textarea> 
            </div>
        </div>

        <input type="submit" value="Save" class="btn">
    </form>
</div>